{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "typeRoots" : [
      "./node_modules/@types",
      "./typings"
    ],
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "./node_modules",
  ]
}